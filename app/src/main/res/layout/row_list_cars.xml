<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/row_background"
    android:orientation="vertical"
    tools:context="com.example.sylwi.servicecarzlomekmobileaplication.activity.CarsActivity"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/baner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marka i model: "
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/car_brand_and_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBanerListView"
            android:paddingLeft="10dp"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/colorItemListView">


        <TextView
            android:id="@+id/baner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numer rejestracyjny:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/registration_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBanerListView"
            android:paddingLeft="10dp"/>
    </TableRow>

</LinearLayout>