<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sylwi.servicecarzlomekmobileaplication.activity.CarsActivity"
    android:shrinkColumns="*"
    android:stretchColumns="2"
    android:background="@drawable/row_background">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/colorItemListView">


        <TextView
            android:id="@+id/car_brand_and_model"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorBanerListView"
            />
        <TextView
            android:id="@+id/registration_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorBanerListView"/>
    </TableRow>

</TableLayout>