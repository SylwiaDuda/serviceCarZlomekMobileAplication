<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin_bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sylwi.servicecarzlomekmobileaplication.activity.DataClientActivity"
    tools:showIn="@layout/app_bar_data_client">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/registration_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/abril_fatface"
            android:text="@string/data_client_info"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <ProgressBar
            android:id="@+id/registration_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone" />
        <ScrollView
            android:id ="@+id/registration_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/first_name_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/name"
                    android:textSize="18sp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAppearance="@style/TextAppearance.Design.Tab"
                    android:textColor="@color/colorBanerListView"
                    />

                <TextView
                    android:id="@+id/first_name_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/first_name_info"
                    android:layout_alignBaseline="@id/first_name_info"
                    android:paddingLeft="@dimen/activity_vertical_margin_bottom"
                    android:textColor="@color/colorBanerListView"
                    />

                <TextView
                    android:id="@+id/last_name_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/surname"
                    android:textSize="18sp"
                    android:layout_below="@id/first_name_info"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAppearance="@style/TextAppearance.Design.Tab"
                    android:textColor="@color/colorBanerListView"
                    />
                <TextView
                    android:id="@+id/last_name_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/last_name_info"
                    android:layout_alignBaseline="@id/last_name_info"
                    android:paddingLeft="@dimen/activity_vertical_margin_bottom"
                    android:textColor="@color/colorBanerListView"
                    />

                <TextView
                    android:id="@+id/email_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="18sp"
                    android:layout_below="@id/last_name_info"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAppearance="@style/TextAppearance.Design.Tab"
                    android:textColor="@color/colorBanerListView"/>
                <TextView
                    android:id="@+id/email_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/email_info"
                    android:layout_alignBaseline="@id/email_info"
                    android:paddingLeft="@dimen/activity_vertical_margin_bottom"
                    android:textColor="@color/colorBanerListView"
                   />

                <TextView
                    android:id="@+id/phone_number_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number"
                    android:textSize="18sp"
                    android:layout_below="@id/email_info"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAppearance="@style/TextAppearance.Design.Tab"
                    android:textColor="@color/colorBanerListView"/>
                <TextView
                    android:id="@+id/phone_number_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/phone_number_info"
                    android:layout_alignBaseline="@id/phone_number_info"
                    android:paddingLeft="@dimen/activity_vertical_margin_bottom"
                    android:textColor="@color/colorBanerListView"
                  />

                <TextView
                    android:id="@+id/city_name_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city_name"
                    android:textSize="18sp"
                    android:layout_below="@id/phone_number_info"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAppearance="@style/TextAppearance.Design.Tab"
                    android:textColor="@color/colorBanerListView"/>
                <TextView
                    android:id="@+id/city_name_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/city_name_info"
                    android:layout_alignBaseline="@id/city_name_info"
                    android:paddingLeft="@dimen/activity_vertical_margin_bottom"
                    android:textColor="@color/colorBanerListView"
                    />


                <TextView
                    android:id="@+id/street_name_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/street_name"
                    android:textSize="18sp"
                    android:layout_below="@id/city_name_info"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAppearance="@style/TextAppearance.Design.Tab"
                    android:textColor="@color/colorBanerListView"/>
                <TextView
                    android:id="@+id/street_name_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/street_name_info"
                    android:layout_alignBaseline="@id/street_name_info"
                    android:paddingLeft="@dimen/activity_vertical_margin_bottom"
                    android:textColor="@color/colorBanerListView"
                    />


                <TextView
                    android:id="@+id/build_num_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/build_number"
                    android:textSize="18sp"
                    android:layout_below="@id/street_name_info"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAppearance="@style/TextAppearance.Design.Tab"
                    android:textColor="@color/colorBanerListView"/>
                <TextView
                    android:id="@+id/build_num_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/build_num_info"
                    android:layout_alignBaseline="@id/build_num_info"
                    android:paddingLeft="@dimen/activity_vertical_margin_bottom"
                    android:textColor="@color/colorBanerListView"
                    />


                <TextView
                    android:id="@+id/apt_num_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/apt_number"
                    android:textSize="18sp"
                    android:layout_below="@id/build_num_info"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAppearance="@style/TextAppearance.Design.Tab"
                    android:textColor="@color/colorBanerListView"/>
                <TextView
                    android:id="@+id/apt_num_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/apt_num_info"
                    android:layout_alignBaseline="@id/apt_num_info"
                    android:paddingLeft="@dimen/activity_vertical_margin_bottom"
                    android:textColor="@color/colorBanerListView"
                 />

                <TextView
                    android:id="@+id/zip_code_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zip_code"
                    android:textSize="18sp"
                    android:layout_below="@id/apt_num_info"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:textAppearance="@style/TextAppearance.Design.Tab"
                    android:textColor="@color/colorBanerListView"/>
                <TextView
                    android:id="@+id/zip_code_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/zip_code_info"
                    android:layout_alignBaseline="@id/zip_code_info"
                    android:paddingLeft="@dimen/activity_vertical_margin_bottom"
                    android:textColor="@color/colorBanerListView"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/zip_code_info"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <Button
                        android:id="@+id/create_account_button"
                        style="@android:style/Widget.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Edytuj dane"

                        android:textStyle="bold" />

                </LinearLayout>
            </RelativeLayout>


        </ScrollView>

    </LinearLayout>




</RelativeLayout>










